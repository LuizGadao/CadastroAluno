<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.luizgadao.cadastroaluno.app.DetailTest">

    <TextView
        android:id="@+id/title"
        android:text="Detalhes das provas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Matéria: "
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/title"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/test_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Matemática"
        android:layout_toRightOf="@+id/test"
        android:layout_alignBaseline="@id/test"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/test_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="data: "
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/test"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/date_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="01/12/2015"
        android:layout_toRightOf="@+id/test_date"
        android:layout_alignBaseline="@id/test_date"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/text_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Topicos:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/test_date"
        android:layout_marginTop="10dp"
        />

    <ListView
        android:id="@+id/list_topics"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text_topic"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
